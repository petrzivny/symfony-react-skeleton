{
    "name": "tetea/symfony-react-skeleton",
    "description": "A minimal template to start Symfony and React project. Following best practices and defense programming.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-zend-opcache": "*",
        "doctrine/doctrine-bundle": "^2.18",
        "doctrine/doctrine-migrations-bundle": "^3.7",
        "doctrine/orm": "^3.5",
        "google/cloud-secret-manager": "^1.12",
        "symfony/console": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/flex": "^2.10",
        "symfony/framework-bundle": "7.3.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/runtime": "7.3.*",
        "symfony/yaml": "7.3.*"
    },
    "require-dev": {
        "phpstan/phpstan": "*",
        "phpstan/phpstan-doctrine": "*",
        "phpstan/phpstan-strict-rules": "*",
        "phpunit/phpunit": "*",
        "psalm/plugin-phpunit": "*",
        "psalm/plugin-symfony": "*",
        "roave/security-advisories": "dev-latest",
        "shipmonk/phpstan-rules": "*",
        "slevomat/coding-standard": "*",
        "squizlabs/php_codesniffer": "*",
        "symfony/browser-kit": "7.3.*",
        "symfony/css-selector": "7.3.*",
        "symfony/maker-bundle": "*",
        "symfony/phpunit-bridge": "7.3.*",
        "symfony/stopwatch": "7.3.*",
        "symfony/web-profiler-bundle": "*",
        "vimeo/psalm": "*",
        "weirdan/doctrine-psalm-plugin": "*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Context\\": "src/Context/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "upgrade-all": "composer update && composer symfony:recipes:update",
        "phpcs": "./vendor/bin/phpcs -sp -d memory_limit=512M",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=1g",
        "psalm": "./vendor/bin/psalm --show-info=true",
        "vuln": "composer update --dry-run roave/security-advisories",
        "yaml": "bin/console lint:yaml --parse-tags config",
        "container": "bin/console lint:container",
        "unit": "bin/phpunit tests/App/Unit --testdox",
        "functional": "bin/phpunit tests/App/Functional --testdox",
        "cache": "bin/console cache:clear --env prod",
        "test": [
            "@phpcs",


            "@vuln",
            "composer validate --strict",
            "@yaml",
            "@container",
            "@unit",
            "@functional",
            "@cache"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*"
        }
    }
}
