{
    "name": "tetea/symfony-react-skeleton",
    "description": "A minimal template to start Symfony and React project. Following best practices and defense programming.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-zend-opcache": "*",
        "doctrine/doctrine-bundle": "^2.9",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.15",
        "google/cloud-secret-manager": "^1.12",
        "symfony/console": "6.3.*",
        "symfony/dotenv": "6.3.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.3.*",
        "symfony/monolog-bundle": "^3.8",
        "symfony/runtime": "6.3.*",
        "symfony/yaml": "6.3.*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.18.4",
        "psalm/plugin-symfony": "^5.0",
        "roave/security-advisories": "dev-latest",
        "shipmonk/phpstan-rules": "^2.6",
        "slevomat/coding-standard": "^8.12",
        "symfony/browser-kit": "6.3.*",
        "symfony/css-selector": "6.3.*",
        "symfony/maker-bundle": "^1.48",
        "symfony/phpunit-bridge": "^6.3",
        "symfony/stopwatch": "6.3.*",
        "symfony/web-profiler-bundle": "6.3.*",
        "vimeo/psalm": "^5.12",
        "weirdan/doctrine-psalm-plugin": "^2.8"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "phpcs": "./vendor/bin/phpcs -sp",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=1g",
        "psalm": "./vendor/bin/psalm --show-info=true",
        "vuln": "composer update --dry-run roave/security-advisories",
        "composer": "composer validate --strict",
        "yaml": "bin/console lint:yaml --parse-tags config",
        "container": "bin/console lint:container",
        "unit": "php bin/phpunit tests/Unit --testdox",
        "functional": "php bin/phpunit tests/Functional --testdox",
        "test": [
            "@phpcs",
            "@phpstan",
            "@psalm",
            "@vuln",
            "@composer",
            "@yaml",
            "@container",
            "@phpunit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.3.*"
        }
    }
}
